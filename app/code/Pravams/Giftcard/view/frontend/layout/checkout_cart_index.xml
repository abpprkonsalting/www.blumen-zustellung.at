<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="Giftcard.cart" class="Pravams\Giftcard\Block\Checkout\Cart\Giftcard" after="checkout.cart.coupon" template="checkout/cart/giftcard.phtml"/>
        </referenceContainer>
        <referenceBlock name="checkout.cart.totals.container">
            <block name="Giftcard.cart.totals" class="Pravams\Giftcard\Block\Checkout\Cart\Giftcard\Totals" template="checkout/cart/totals.phtml" />
        </referenceBlock>
    </body>
</page>