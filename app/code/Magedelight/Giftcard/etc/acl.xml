<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magedelight_Giftcard::giftcard_root" title="Giftcard" translate="title" sortOrder="10">
                    <resource id="Magedelight_Giftcard::codes" title="Manage Codes" translate="title">
                    </resource>
                    <resource id="Magedelight_Giftcard::products" title="Manage Gift Products" translate="title">
                    </resource>
                    <resource id="Magedelight_Giftcard::history" title="History" translate="title">
                    </resource>
                    <resource id="Magedelight_Giftcard::settings" title="Settings" translate="title">
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magedelight_Giftcard::config_giftcard" title="Giftcard Settings" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>            
        </resources>
    </acl>
</config>